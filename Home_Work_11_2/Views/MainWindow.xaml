<Window x:Class="Home_Work_11_2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_2.Views"
        mc:Ignorable="d"
        Title="{Binding Position}" Height="650" Width="1000"
        x:Name="mainwindow" WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid Background="White" Grid.Row="1" Margin="25,40,25,15" >
            <!--<TextBox Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged" Height="30" Width="200" Margin="25" VerticalAlignment="Top"  HorizontalAlignment="left" BorderThickness="1" BorderBrush="#E0E0E0" />-->
            <TextBox Name="FindTextBox" Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" Width="200" Margin="25" VerticalAlignment="Top"
                     HorizontalAlignment="left" BorderThickness="1" BorderBrush="#E0E0E0"/>
            
            <Button CommandParameter="{x:Reference Name=mainwindow}"
                    Command="{Binding ShowAddNewClientWindowCommand}"
                    Content="Новый клиент" Width="150" VerticalContentAlignment="Center" Padding="5"
                    Margin="25" VerticalAlignment="Top" HorizontalAlignment="Right"
                    BorderThickness="1" BorderBrush="#E0E0E0"  />
            
            <ListView x:Name="ClientList" ItemsSource="{Binding Clients}" BorderBrush="#cdcdcd"
                      Margin="25,70,25,25" Padding="0"
                      SelectedItem="{Binding SelectedClient, UpdateSourceTrigger=PropertyChanged}"
                      FontSize="20">
                <ListBox.ContextMenu>
                    <ContextMenu  >
                        <MenuItem Header="Редакировать" Command="{Binding ShowEditClientWindowCommand}"
                                  IsEnabled="{Binding Flag}"/>
                        <MenuItem Header="Удалить" Command="{Binding DeleteClientCommand}"
                                  IsEnabled="{Binding Flag}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding SecondName}" Header="Фамилия"/>
                        <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Header="Имя"/>
                        <GridViewColumn DisplayMemberBinding="{Binding ThirdName}" Header="Отчество"/>
                        <GridViewColumn Header="Дата рождения">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Passport.BirthDate, StringFormat='dd.MM.yyyy'}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding PhoneNumber}" Header="Телефон" Width="160"/>
                        <GridViewColumn Header="Сумма на счёте" DisplayMemberBinding="{Binding BankAccount.Sum, StringFormat={}{0} руб.}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
