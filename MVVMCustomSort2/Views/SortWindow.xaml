<Window
    x:Class="MVVMCustomSort2.Views.SortWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMCustomSort2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MVVMCustomSort2.ViewModels"
    Title="SortWindow"
    Width="300"
    Height="200"
    mc:Ignorable="d"
    x:Name="sortWindow">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Button
        x:Name="SortButton"
        Width="150"
        Height="50"
        Command="{Binding SortPersonCommand, UpdateSourceTrigger=PropertyChanged}"
        CommandParameter="{Binding ElementName=Persons}"
        CommandTarget="{Binding ElementName=UserList, Path=Views.MainWindow.xaml}"
        Content="Сортировка" />
</Window>
