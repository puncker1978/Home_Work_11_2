<Window x:Class="MVVMCustomSort.Views.SortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMCustomSort.Views"
        xmlns:vm="clr-namespace:MVVMCustomSort.ViewModels"
        mc:Ignorable="d"
        Title="SortWindow" Height="150" Width="200" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Button x:Name="SortButton" Height="50" Width="150"
                Content="Сортировка"
                Command="{Binding SortPersonCommand, UpdateSourceTrigger=PropertyChanged}"
                CommandParameter="{Binding Persons}"
                CommandTarget="{Binding Path=Persons}"/>
    </Grid>
</Window>
